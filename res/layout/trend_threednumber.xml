<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lin_first"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/text_first_expect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="第00000000000期"
                android:textColor="#D1D1D1"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="6dp"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="6dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/text_first_one"
                android:layout_width="37dp"
                android:layout_height="40dp"
                android:background="@drawable/xbig_num_on"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:layout_width="6dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/text_first_two"
                android:layout_width="37dp"
                android:layout_height="40dp"
                android:background="@drawable/xbig_num_on"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:layout_width="6dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/text_first_three"
                android:layout_width="37dp"
                android:layout_height="40dp"
                android:background="@drawable/xbig_num_on"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:layout_width="6dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/text_first_four"
                android:layout_width="37dp"
                android:layout_height="40dp"
                android:background="@drawable/xbig_num_on"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="6dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/text_first_five"
                android:layout_width="37dp"
                android:layout_height="40dp"
                android:background="@drawable/xbig_num_on"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="6dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_other"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/text_other_expect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="第00000000000期"
                android:textColor="#D1D1D1"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <LinearLayout
                android:layout_width="126dp"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#66CDAA"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/text_other_one"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#66CDAA"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/text_other_two"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#66CDAA"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/text_other_three"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#66CDAA"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/text_other_four"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#66CDAA"
                    android:textSize="15dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/text_other_five"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#66CDAA"
                    android:textSize="15dp"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>