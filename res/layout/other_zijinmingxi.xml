<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#66CDAA"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="6"
            android:background="@drawable/shapemessage"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/lin_zijin"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="#66CDAA" >

                <TextView
                    android:id="@+id/text_zijin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="资金"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="#66CDAA" />

            <LinearLayout
                android:id="@+id/lin_paijiang"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/text_paijiang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="派奖"
                    android:textColor="#66CDAA"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="#66CDAA" />

            <LinearLayout
                android:id="@+id/lin_tixian"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/text_tixian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="提现"
                    android:textColor="#66CDAA"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="#66CDAA" />

            <LinearLayout
                android:id="@+id/lin_chongzhi"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/text_chongzhi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="充值"
                    android:textColor="#66CDAA"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lin_zijinloading"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="正在加载..." />
        </LinearLayout>

        <ListView
            android:id="@+id/list_zijin"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >
        </ListView>
    </LinearLayout>

</LinearLayout>