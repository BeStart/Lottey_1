<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#66CDAA"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/Lin_back"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#66CDAA"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/back_btn"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#66CDAA"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/numberlist_tickettype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="开户管理"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_change"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#66CDAA"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DEDEDE" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:text="用户名:" />

                    <EditText
                        android:id="@+id/text_littleusername"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="输入下级用户名" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#DEDEDE" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:text="密码:" />

                    <EditText
                        android:id="@+id/text_littlepassword"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="输入下级密码"
                        android:password="true" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#DEDEDE" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:text="确认密码:" />

                    <EditText
                        android:id="@+id/text_littlepasswordconfirm"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="确认下级密码"
                        android:password="true" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#DEDEDE" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:text="时时彩返点:" />

                    <EditText
                        android:id="@+id/text_sscreturn"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="时时彩返点" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#DEDEDE" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:text="11选5返点:" />

                    <EditText
                        android:id="@+id/text_11choose5return"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="11选5返点" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#DEDEDE" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:text="低频返点:" />

                    <EditText
                        android:id="@+id/text_dipinreturn"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="低频返点" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#DEDEDE" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center" >

                    <Button
                        android:id="@+id/btn_littleok"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/green_button"
                        android:gravity="center"
                        android:text="确认添加" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/text_show"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>