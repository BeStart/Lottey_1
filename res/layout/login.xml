<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#1C86EE" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/rule_back"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#1C86EE"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1C86EE"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="登录"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/lin_cancel"
            android:background="#1C86EE"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="关闭"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/myImage"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dip"
        android:background="@drawable/pic_9tree" />

    <EditText
        android:id="@+id/loginusername"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@id/myImage"
        android:layout_marginTop="35dip"
        android:background="@drawable/qqnum_edit"
        android:paddingLeft="50dip" />

    <EditText
        android:id="@+id/loginpassword"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@id/loginusername"
        android:background="@drawable/qq_password_edit"
        android:paddingLeft="50dip"
        android:password="true" />

    <ImageButton
        android:id="@+id/accountDetail"
        android:layout_width="23dip"
        android:layout_height="20dip"
        android:layout_alignBottom="@+id/loginusername"
        android:layout_alignRight="@+id/loginusername"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="3dip"
        android:background="@drawable/indicator_down"
        android:visibility="gone" />

    <Button
        android:id="@+id/quiklyloginto"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:layout_below="@id/loginpassword"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dip"
        android:background="@drawable/shapebutton"
        android:text="登录"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/fetchPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/quiklyloginto"
        android:layout_marginLeft="45dip"
        android:gravity="bottom"
        android:text=""
        android:textColor="#333355"
        android:textSize="7pt" />

    <TextView
        android:id="@+id/registQQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/quiklyloginto"
        android:layout_marginRight="45dip"
        android:layout_marginTop="5dip"
        android:gravity="bottom"
        android:text=""
        android:textColor="#333355"
        android:textSize="7pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/quiklyloginto"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:text=""
        android:textSize="7pt" />

    <ListView
        android:id="@+id/accountlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/registQQ"
        android:layout_alignLeft="@id/loginusername"
        android:layout_alignRight="@id/loginusername"
        android:layout_below="@id/loginusername"
        android:divider="#aaaaaa"
        android:dividerHeight="0px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/loginpassword"
        android:layout_alignBottom="@+id/loginpassword"
        android:layout_alignLeft="@+id/loginpassword"
        android:layout_marginLeft="5dip"
        android:text="密码"
        android:textColor="@android:color/darker_gray"
        android:textSize="8pt" />

    <ImageButton
        android:id="@+id/delete_button_edit"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_alignBottom="@+id/loginpassword"
        android:layout_alignLeft="@+id/accountDetail"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="3.5dip"
        android:background="@drawable/delete_button_edit"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/loginusername"
        android:layout_alignBottom="@+id/loginusername"
        android:layout_alignLeft="@+id/textView1"
        android:text="账号"
        android:textColor="@android:color/darker_gray"
        android:textSize="8pt" />

</RelativeLayout>