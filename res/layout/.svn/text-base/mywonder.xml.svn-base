<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:background="@drawable/static_top_bg"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:orientation="horizontal" >

            <include layout="@layout/title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:background="@drawable/avatar" />

                <TextView
                    android:id="@+id/myaccountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="￥1.38" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:background="#00000000"
                    android:id="@+id/openAccountMgr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"   
                    android:text="开户管理" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/chongzhiimage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:background="@drawable/chongzhi_icon_normal" />

                <TextView
                    android:id="@+id/addAccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                   android:gravity="center"
                    android:text="充值" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/tixianimagebt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tixian_icon_normal" />

                <TextView
                    android:id="@+id/GetAccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="提现" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/zijinmingxi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/account" />

                <TextView
                    android:id="@+id/accountDetails"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="资金明细" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >
        <LinearLayout
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
             android:layout_height="0dp"
            android:layout_weight="1"
             >
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                >
                
                
                <TextView 
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="投注记录"
                    />
                <ImageButton 
               android:id="@+id/touzhuHistory"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:src="@drawable/arrow_down"
                android:layout_height="wrap_content"
                />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                >
                
              
                <Button 
               android:id="@+id/touzhuAllHistotry"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="全部"
                android:textColor="#000000"
                android:background="#ffffff"
                android:layout_height="wrap_content"
                />
            </LinearLayout>
            
             <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                >
                
              
                <Button 
               android:id="@+id/abtaindAward"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="已中奖"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:background="#ffffff"
                android:layout_height="wrap_content"
                />
            </LinearLayout>
             <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                >
                
              
                <Button 
               android:id="@+id/haventAward"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:text="未中奖"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                />
            </LinearLayout>
            
        </LinearLayout>
        
        <LinearLayout
            android:background="#ffffff"
            android:layout_width="fill_parent"
             android:layout_height="0dp"
            android:layout_weight="5"
             >
            <android.support.v4.view.ViewPager
                android:id="@+id/myaccountViewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>