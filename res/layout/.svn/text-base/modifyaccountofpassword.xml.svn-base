<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
              android:background="#40E0D0"
            android:id="@+id/titlelinerlayout"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity=""
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ModifyAccountpasswordback"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:lineSpacingExtra="0sp"
                android:padding="0dp"
                android:src="@drawable/back_btn"
                android:text="@string/back" />

            <Button
                android:id="@+id/ModifyAccountpasswordtitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="#00000000"
                android:gravity="center"
                android:text="@string/title"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/ModifyAccountpasswordforward"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center"
                android:lineSpacingExtra="0sp"
                android:padding="0dp"
                android:src="@drawable/arrow_old_money"
                android:text="@string/forward" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="当前密码" />

                <EditText
                    android:id="@+id/modifyaccoiuntPasswordCurrentPasswod"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:hint="请输入当前密码" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="输入新密码" />

                <EditText
                    android:id="@+id/modifyaccountPasswordInputNewPassword"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:ems="10"
                    android:password="true" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="确认新密码" />

                <EditText
                    android:id="@+id/modifyaccountPasswordclirifyPaaword"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.06"
                    android:password="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/modifyAccountpassworddetails" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>